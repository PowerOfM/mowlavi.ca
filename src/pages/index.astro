---
import Layout from "../layouts/Layout.astro";
import AppNav from "../components/AppNav.astro";
import Coverpage from "./home/Coverpage.astro";
import CoverpageMobile from "./home/CoverpageMobile.astro";
import About from "./home/About.astro";
import Projects from "./home/Projects.astro";
import Contact from "./home/Contact.astro";
---

<Layout title="Mesbah Mowlavi Profile">
  <AppNav />

  <CoverpageMobile class="mobile-only" />
  <Coverpage class="tablet-up-flex" />

  <About />
  <Projects />
  <Contact />
</Layout>

<style lang="scss" is:global>
  @import "../styles/theme.sass";

  @include tablet {
    html {
      scroll-snap-type: y proximity;
    }
    .hero {
      scroll-snap-align: start;
      scroll-padding: 5px;
    }
  }
</style>

